{
    "name": "@def/wallet",
    "version": "0.1.0",
    "license": "UNLICENSED",
    "dependencies": {
        "ethers": "^5.1.4"
    },
    "devDependencies": {
        "@typechain/ethers-v5": "^7.0.0",
        "@types/chai": "^4.2.18",
        "@types/mocha": "^8.2.2",
        "@types/node": "^15.0.2",
        "chai": "^4.3.4",
        "mkdirp": "^1.0.4",
        "mocha": "^7.2.0",
        "openzeppelin-solidity": "^4.1.0",
        "ts-node": "^10.0.0",
        "typechain": "^5.0.0",
        "typescript": "^4.3.2"
    },
    "scripts": {
        "generate_contract_wrappers": "yarn generate_contract_wrappers:clean && yarn generate_contract_wrappers:typechain",
        "generate_contract_wrappers:clean": "rm -rf lib/*",
        "generate_contract_wrappers:typechain": "typechain --target ethers-v5 --out-dir lib/src/contracts '../contracts/artifacts/contracts/**/?(Defter|IERC20|MTRToken).json'",
        "build": "yarn generate_contract_wrappers && tsc -b",
        "test": "yarn build && mocha -r ts-node/register lib/test/*.js --exit",
        "clean": "yarn generate_contract_wrappers:clean"
    }
}
