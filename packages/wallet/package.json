{
    "name": "wallet",
    "dependencies": {
        "ethers": "^5.1.4"
    },
    "devDependencies": {
        "@typechain/ethers-v5": "^7.0.0",
        "@types/chai": "^4.2.18",
        "@types/mocha": "^8.2.2",
        "@types/node": "^15.0.2",
        "chai": "^4.3.4",
        "mkdirp": "^1.0.4",
        "mocha": "^7.2.0",
        "openzeppelin-solidity": "^4.1.0"
    },
    "scripts": {
        "build": "yarn install",
        "test": "yarn generate_contract_wrappers && tsc test/wallet_test.ts && node_modules/mocha/bin/mocha test",
        "generate_contract_wrappers": "yarn generate_contract_wrappers:clean && yarn generate_contract_wrappers:typechain",
        "generate_contract_wrappers:clean": "rm -rf src/contracts",
        "generate_contract_wrappers:typechain": "typechain --target ethers-v5 --out-dir src/contracts '../contracts/artifacts/contracts/**/?(Defter|IERC20|MTRToken).json'",
        "clean": "yarn generate_contract_wrappers:clean && rm test/**/*.js && rm src/**/*.js"
    },
    "private": true,
    "workspaces": [
        "./*"
    ]
}
