{
    "extends": "../../tsconfig-base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "strict": true,
        "pretty": true,
        "lib": ["es6"],
        "typeRoots": ["./node_modules/@types"],
        "rootDir": "."
    },
    "include": [
        "./src/**/*.ts",
        "./src/contracts/*.d.ts",
        ".src/contracts/factories/*.ts",
        "./test/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
